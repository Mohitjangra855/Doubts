<% layout("boilerplate/boilerplates.ejs") %>
    <link rel="stylesheet" href="/css/show.css">
    <div class="main-div mt-2 mb-2">
        <div class="product-image">
            <img src="<%= showProduct.image  %>" alt="img">
            <div><button><i class="fa-solid fa-cart-shopping"></i>&nbsp;Add To Cart</button><button><i
                        class="fa-solid fa-bolt-lightning"></i>&nbsp;Buy Now</button>
            </div>
        </div>
        <div class="product-info">
            <div class="coustom-card-body">
                <h4 class="coustom-card-title">
                    <%= showProduct.company %>
                </h4>
                <h5 class="coustom-card-title">
                    <%= showProduct.name %>
                </h5>
                <p class="green">Special price</p>
                <h6 class="coustom-card-price"><i class="fa-solid fa-indian-rupee-sign"></i>&nbsp;<%= showProduct.price
                        %> <span>
                            <%= showProduct.price*2 %>
                        </span>
                        <p class="discount green"></p>
                </h6>
                <p class="p">be the first to review this product <img
                        src="https://static-assets-web.flixcart.com/fk-p-linchpin-web/fk-cp-zion/img/fa_62673a.png"
                        alt="img"></p>
                <ul>
                    <b>Available offers</b>
                    <li> <img
                            src="https://rukminim2.flixcart.com/www/36/36/promos/06/09/2016/c22c9fc4-0555-4460-8401-bf5c28d7ba29.png?q=90"
                            alt="img"><b>Bank Offer</b>&nbsp;5% Cashback on Flipkart Axis Bank Card <span>T&C</span>
                    </li>
                    <li> <img
                            src="https://rukminim2.flixcart.com/www/36/36/promos/06/09/2016/c22c9fc4-0555-4460-8401-bf5c28d7ba29.png?q=90"
                            alt="img"><b>Bank Offer</b>&nbsp;10% Instant Discount on BOBCARD Transactions, up to ₹1,000
                        on orders of ₹7,500 and above <span>T&C</span></li>

                    <li> <img
                            src="https://rukminim2.flixcart.com/www/36/36/promos/06/09/2016/c22c9fc4-0555-4460-8401-bf5c28d7ba29.png?q=90"
                            alt="img"><b>Bank Offer</b>&nbsp;10% off on Citi-branded Credit Card EMI Transactions, up to
                        ₹2,000 on orders of ₹5,000 and above <span>T&C</span></li>
                    <li> <img
                            src="https://rukminim2.flixcart.com/www/36/36/promos/06/09/2016/c22c9fc4-0555-4460-8401-bf5c28d7ba29.png?q=90"
                            alt="img"><b>Bank Offer</b>&nbsp;Get extra 20% off (price inclusive of cashback/coupon)
                        <span>T&C</span> <br> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span>+21 more offers</span></li>

                </ul>
            </div>
            <div class="Details"><%= showProduct.details  %></div>
        </div>
    </div>
    </div>
    <script>
        let discount = document.querySelectorAll(".discount");
        for (dis of discount) {
            let randomNum = Math.floor(Math.random() * 20) + 10;
            dis.innerText = +randomNum + "% off";
        }

    </script>