
<body>
    <% layout("/layouts/boilerplate") %>
    <h1>Create a New Listing</h1>
    <form action="/listing" method="post">
        
        <input type="text" name="listing[title]" placeholder="Enter Your Title"><br><br>
        <textarea name="listing[description]" placeholder="Enter Your Description" id="" cols="21" rows="5"></textarea><br><br>
        <input type="text" name="listing[image]" placeholder="Enter Your Image URL"><br><br>
        <input type="number" name="listing[price]" placeholder="Enter Price"><br><br>
        <input type="text" name="listing[country]" placeholder="Enter Your Country"><br><br>
        <input type="text" name="listing[location]" placeholder="Enter Your Location"><br><br>
        <button>Create</button>
   </form>
</body>
